extends ../layouts/common.pug
block content
    br
    .row
      each product in products
        .col-md-3
            .card-group(style="height: 440px")  
                .card
                    img.card-img-top(src=product.image, alt='Card image cap')
                    .card-body
                    h5.card-title= product.name
                    p.card-text= product.desc
                    a.btn.btn-primary(href='/cart/add/'+ product.id) Go somewhere
            br
        