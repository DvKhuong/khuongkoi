extends ../layouts/common.pug
block content

  h1 Sửa người dùng
  if errors
    each error in errors
      .alert.alert-danger= error
      
  form(action="/users/update", method="POST" enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input#name.form-control(name="name" type="text", value=user ? user.name : '')
      input(name="id" type="hidden" value=user ? user.id : '')
    .form-group
      label(for="phone") Phone
      input#phone.form-control(name="phone" type="text" value=user ? user.phone : '')
    .form-group
      label(for="email") Email
      input#email.form-control(name="email" type="text" value=user ? user.email : '')
    .form-group
      label(for="password") Password
      input#password.form-control(name="password" type="password" value=user ? user.password : '')
    .form-group
      label(for="avatar") Avatar
      input#avatar.form-control-file(name="avatar" type="file" )

    button.btn.btn-primary Update